<%= will_paginate @categories, :renderer => BootstrapPagination::Rails %>

<table class="table table-striped table-bordered">
  <tr>
    <th><%= t('activerecord.attributes.category.name') %></th>
    <th><%= t('activerecord.attributes.category.description') %></th>
    <th><%= t('actions.actions') %></th>
  </tr>  
  
<% @categories.each do |category| %>
  <tr>
    <td><%= category.name %></td>
    <td><%= category.description %></td>
    <td>
      <div class="btn-group">
    	<%= link_to raw('<i class="glyphicon glyphicon-eye-open"></i>'), category, :class => "btn btn-default", :title => t('actions.show'), :alt => t('actions.show') %>
    	<%= link_to raw('<i class="glyphicon glyphicon-pencil"></i>'), edit_category_path(category), :class => "btn btn-default", :title => t('actions.edit'), :alt => t('actions.edit') %>
    	<%= link_to raw('<i class="glyphicon glyphicon-trash"></i>'), category, method: :delete, data: { confirm: t('actions.are_you_sure') }, :class => "btn btn-default", :title => t('actions.destroy'), :alt => t('actions.destroy') %>
      </div>
    </td>
  </tr>
<% end %>
</table>

<br />
<%= link_to new_category_path, :class => "btn btn-default", :title => t('actions.new'), :alt => t('actions.new') do %>
  <i class="glyphicon glyphicon-plus"></i> <%= t('actions.new') %>
<% end %>
