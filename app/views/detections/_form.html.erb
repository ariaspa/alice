<%= simple_form_for(@detection, html: {class: 'form-horizontal'}, wrapper: :horizontal_form) do |f| %>
  <%= f.error_notification %>

  <h4><%= t('activerecord.attributes.product.name') %>: <%= @detection.product.name %></h4>

  <div class="form-group">
  	<div class="col-sm-6 col-md-6 col-lg-6">
      <%= f.input :name %>
    </div>
  </div>
  
  <div class="form-group">
    <%= button_tag(type: 'submit', class: "btn btn-primary") do %>
      <i class="glyphicon glyphicon-ok glyphicon-inverse"></i> <%= t('actions.save') %>
    <% end %>
    <%= link_to (detections_path + "?product_id=#{@detection.product.id}"), :class => "btn btn-default" do %>
      <i class="glyphicon glyphicon-arrow-left"></i> <%= t('actions.back') %>
    <% end %>
  </div>
  
<% end %>
