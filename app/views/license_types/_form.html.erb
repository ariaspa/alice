<%= simple_form_for(@license_type) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs form-horizontal">
    <%= f.input :code, input_html: { maxlength: 1, :class => "col-md-1" } %>
    <%= f.input :description, :input_html => { :class => "col-md-6" } %>
    <%= f.input :protection_level, :input_html => { :class => "col-md-1" } %>
  </div>

  <br />
  <div class="form-actions">
    <%= button_tag(type: 'submit', class: "btn btn-primary") do %>
      <i class="glyphicon glyphicon-ok glyphicon-inverse"></i> <%= t('actions.update') %>  
    <% end %>
    <%= link_to license_types_path, :class => "btn btn-default" do %>
      <i class="glyphicon glyphicon-arrow-left"></i> <%= t('actions.back') %>      
    <% end %> 
  </div>
<% end %>
