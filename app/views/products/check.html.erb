<%= form_for @product, url: {action: 'update_check'}, html: {method: "post"} do |f| %>

  <%= hidden_field_tag 'product_id', @product.id %>
  <%= hidden_field_tag 'result', @product.result %>
  <%= hidden_field_tag 'compatible_license_id', @product.compatible_license.id %>

  <button class="btn btn-large btn-block btn-primary disabled" type="button">
    <%= t('activerecord.models.product') %>: <%= @product.name %> - Vers. <%= @product.version %>
  </button>

  <h4>
    <br/>
    <%= t('activerecord.attributes.product.result') %>:
    <% if @product.result.nil? %>
      <span class="label label-warning">NC</span>
    <% else %>
      <% if @product.result? %>
        <span class="label label-success">OK</span>
      <% else %>
        <span class="label label-important">KO</span>
      <% end %>
    <% end %>
    <br/>
    <%= t('activerecord.attributes.product.license_id') %>: <% if !@product.license.nil? %><%= @product.license.name %> <%= @product.license.version %><% end %>
    <br/>
    <%= t('activerecord.attributes.product.compatible_license_id') %>: <%= @product.compatible_license.name %>
  </h4>

  <% if @product.errors.full_messages.length > 0 %>
    <div class="alert alert-error">
      <strong>Errori:</strong>
      <ol>
        <% @product.errors.full_messages.each do |msg| %>
           <li><label class="text-error"><%= msg %></label></li>
        <% end %>
      </ol>
    </div>
  <% end %>

  <% if !@product.warnings.nil? %>
    <div class="alert">
      <strong>Avvisi:</strong>
      <ol>
        <% @product.warnings.full_messages.each do |msg| %>
           <li><label><%= msg %></label></li>
        <% end %>
      </ol>
    </div>
  <% end %>

  <% if !@product.infos.nil? %>
    <div class="alert alert-info">
      <strong>Informazioni:</strong>
      <ol>
        <% @product.infos.full_messages.each do |msg| %>
           <li><label><%= msg %></label></li>
        <% end %>
      </ol>
    </div>
  <% end %>

  <div class="form-inputs form-horizontal">

    <div class="form-actions">
      <% if !@product.result.nil? %>
        <%= button_tag(type: 'submit', class: "btn btn-primary") do %>
          <i class="icon-ok icon-white"></i> <%= t('actions.save') %>
        <% end %>
      <% end %>
      <%= link_to products_path, :class => "btn" do %>
          <i class="icon-arrow-left"></i> <%= t('actions.back') %>
      <% end %>
    </div>

  </div>

<% end %>
