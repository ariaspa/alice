<!-- Modal -->
<div id="myModal" class="modal hide fade" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
  <div class="modal-header">
    <button type="button" class="close" data-dismiss="modal" aria-hidden="true">×</button>
    <h3 id="myModalLabel">Modal header</h3>
  </div>
  <div class="modal-body">

  <%= form_tag product_ties_new_path, :method => 'get', :class => "form-inline" do %>	
    <div class="input-group-sm">
      <%= text_field_tag :component_name, params[:component_name], :class => "col-md-6 search-query form-control" %>
      <button type="submit" class="btn btn-sm btn-default"><span class="glyphicon glyphicon-search"></span> <%= t('activerecord.models.component') %></button>
    </div>
  <% end %>

    <p>One fine body…</p>
  </div>
  <div class="modal-footer">
    <button class="btn btn-default" data-dismiss="modal" aria-hidden="true">Close</button>
    <button class="btn btn-primary">Save changes</button>
  </div>
</div>

