<div class="container-fluid">
<div class="row-fluid">

<div class="span6">
	<%= render :partial => "search_product" %>
<div class="well sidebar-nav">
<!--Product content-->
<ul class="nav nav-list">
  <li class="nav-header"><%= t('activerecord.models.products') %></li>
  <li class="divider"></li>
  <% @products.each do |product| %>
<!--
      <li><label class="checkbox inline">
        <input type="checkbox" id="inlineCheckbox1" value="option1">
    	<%= link_to product.name, product_ties_select_path(product) %>
        </label>
    </li>
-->    
    <li<% if !@product.nil? and product.name.eql?(@product.name) %> class="active"<% end %>><%= link_to product.name, product_ties_select_path(product) %></li>
  <% end %>
</ul>
</div><!--/.well -->
</div><!--/span-->

<div class="span6">
	<%= render :partial => "search_component" %>
<div class="well sidebar-nav">
<!--Component content-->
<ul class="nav nav-list">
  <li class="nav-header"><%= t('activerecord.models.components') %></li>
  <li class="divider"></li>
  <% @components.each do |component| %>
<!--    <li><label class="checkbox inline">
        <input type="checkbox" id="inlineCheckbox1" value="option1">
    	<%= link_to component.name, component_ties_select_path(component) %>
      </label>
    </li>
-->    
    <li<% if !@component.nil? and component.name.eql?(@component.name) %> class="active"<% end %>><%= link_to component.name, component_ties_select_path(component) %></li>
  <% end %>
</div><!--/.well -->
</div><!--/span-->

</div>
</div>
