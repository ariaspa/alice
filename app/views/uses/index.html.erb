<table class="table table-striped">
  <tr>
    <th><%= t('activerecord.attributes.use.name') %></th>
    <th><%= t('activerecord.attributes.use.description') %></th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @uses.each do |use| %>
  <tr>
    <td><%= use.name %></td>
    <td><%= use.description %></td>
    <td><%= link_to '', use, :class => "icon-eye-open", :title => t('actions.show'), :alt => t('actions.show') %></td>
    <td><%= link_to '', edit_use_path(use), :class => "icon-pencil", :title => t('actions.edit'), :alt => t('actions.edit') %></td>
    <td><%= link_to '', use, method: :delete, data: { confirm: t('actions.are_you_sure') }, :class => "icon-trash", :title => t('actions.destroy'), :alt => t('actions.destroy') %></td>
  </tr>
<% end %>
</table>

<br />
<i class="icon-plus"></i>
<%= link_to t('actions.new'), new_use_path, :title => t('actions.new'), :alt => t('actions.new') %>
